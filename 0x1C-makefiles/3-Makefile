CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f 
all: $(NAME)
$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)
# Rule to clean object files only
oclean:
	$(RM) $(OBJS)

# Rule to clean intermediate and temporary files
clean: oclean

# Rule to clean everything including the executable
fclean: clean
	$(RM) $(TARGET)

# Rule to rebuild everything from scratch
re: fclean all
